<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <!-- MaterialID -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_id_matsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_id_matsearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/id" />

            </android.support.design.widget.TextInputLayout>

            <!-- Type -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_type_matsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_type_matsearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/type" />

            </android.support.design.widget.TextInputLayout>

            <!-- Band -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_band_matsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_band_matsearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/band" />

            </android.support.design.widget.TextInputLayout>

            <!-- Original -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_original_matsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_original_matsearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/origin" />

            </android.support.design.widget.TextInputLayout>

            <!-- Position -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_position_matsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_position_matsearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/location" />

            </android.support.design.widget.TextInputLayout>

            <!-- Yearstart -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_yearstart_matsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_yearstart_matsearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:digits="0123456789-"
                    android:hint="@string/date_start" />

            </android.support.design.widget.TextInputLayout>

            <!-- Yearend -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_yearend_matsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp">

                <EditText
                    android:id="@+id/input_yearend_matsearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:digits="0123456789-"
                    android:hint="@string/date_end" />

            </android.support.design.widget.TextInputLayout>

            <ProgressBar
                android:id="@+id/progressbar_matsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_search_matsearch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="12dp"
                android:text="@string/search" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
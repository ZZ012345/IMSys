<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="请填写入库信息"
                android:textSize="25dip"
                android:textColor="@color/black" />

            <!-- Id -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_id_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_id_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="标号*" />

            </android.support.design.widget.TextInputLayout>

            <!-- Type -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_type_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_type_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="类型" />

            </android.support.design.widget.TextInputLayout>

            <!-- StoreState -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="4dp"
                android:textSize="18dp"
                android:text="库存状态" />

            <Spinner
                android:id="@+id/spinner_state_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/state"
                android:spinnerMode="dialog" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#668B8B" />

            <!-- Mark -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_mark_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_mark_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="型号" />

            </android.support.design.widget.TextInputLayout>

            <!-- Band -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_band_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_band_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="品牌" />

            </android.support.design.widget.TextInputLayout>

            <!-- Original -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_original_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_original_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="原产地" />

            </android.support.design.widget.TextInputLayout>

            <!-- Year -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_year_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_year_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:digits="0123456789-"
                    android:hint="年份" />

            </android.support.design.widget.TextInputLayout>

            <!-- State -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_state_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_state_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="状况" />

            </android.support.design.widget.TextInputLayout>

            <!-- Position -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_position_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_position_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="位置" />

            </android.support.design.widget.TextInputLayout>

            <!-- Unit -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_unit_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_unit_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:digits="0123456789."
                    android:hint="单位原值" />

            </android.support.design.widget.TextInputLayout>

            <!-- Name -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_name_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/input_name_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="名称" />

            </android.support.design.widget.TextInputLayout>

            <!-- Company -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_company_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_company_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="制造企业" />

            </android.support.design.widget.TextInputLayout>

            <!-- MachineName -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_machinename_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_machinename_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="整机名称" />

            </android.support.design.widget.TextInputLayout>

            <!-- MachineType -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_machinetype_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_machinetype_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="整机型号" />

            </android.support.design.widget.TextInputLayout>

            <!-- MachineBand -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_machineband_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_machineband_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="整机品牌" />

            </android.support.design.widget.TextInputLayout>

            <!-- Condition -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_condition_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_condition_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="储存条件" />

            </android.support.design.widget.TextInputLayout>

            <!-- Vulnerability -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_vul_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_vul_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="易损性" />

            </android.support.design.widget.TextInputLayout>

            <!-- Description -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_description_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_description_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="备注" />

            </android.support.design.widget.TextInputLayout>

            <!-- DateTime -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_datetime_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_date_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:digits="0123456789-"
                    android:hint="入库时间*" />

            </android.support.design.widget.TextInputLayout>

            <!-- Operator -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_operator_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_operator_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="操作人员*" />

            </android.support.design.widget.TextInputLayout>

            <!-- Num -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_num_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_num_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:digits="0123456789"
                    android:hint="入库量*" />

            </android.support.design.widget.TextInputLayout>

            <!-- InputDescription -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/wrapper_inputdescription_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_inputdescription_partin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="入库备注" />

            </android.support.design.widget.TextInputLayout>

            <ProgressBar
                android:id="@+id/progressbar_partin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_submit_partin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="30dp"
                android:padding="12dp"
                android:text="入库" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>